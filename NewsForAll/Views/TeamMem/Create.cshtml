@model TeamMemCreateViewModel
@{
    ViewData["Title"] = "Create";
}


<form method="post" asp-action="Create" asp-controller="TeamMem" enctype="multipart/form-data">
    <div class="border  m-2 p-4">
        <div class="form-group row">
            <h3 class=" text-center border-bottom d-inline m-1">
                Add New Member
            </h3>


        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group ">
                    <div class="col">
                        <label asp-for="Name">

                        </label>
                        <input asp-for="Name" class="form-control">
                    </div>
                </div>
                    <div class="col">
                        <div class="form-group ">
                            <label asp-for="TitleJob">
                            </label>
                            <input asp-for="TitleJob" class="form-control" />
                        </div>
                    </div>
                       
                        <div class="form-group ">
                            <div class="col">
                                <div class="custom-file">
                                    <input asp-for="Image" type="file" class="custom-file-input" id="customFile">
                                    <label class="custom-file-label" for="customFile">Choose file</label>
                                </div>



                            </div>

                            </div>

                            <div class="col-4 ">
                                <div class="form-group row mt-4">

                                    <div class="col">
                                        <input type="submit" value="Create" class="btn btn-warning" />
                                    </div>
                                    <div class="col">
                                        <a asp-action="ATeamMem" class="btn btn-outline-warning">Back</a>
                                    </div>
                                </div>
                                </div>
        </div>
            </div>
            </div>
            @section Scripts {
                <script>
                // Add the following code if you want the name of the file appear on select
                $(".custom-file-input").on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
                });
                </script>

            }
</form>

