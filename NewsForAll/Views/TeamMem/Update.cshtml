@model TeamMem
@{
    ViewData["Title"] = "Update";
}





<form method="post" asp-action="Update" asp-controller="TeamMem" >
    <div class="border  m-2 p-4">
        <div class="form-group row">
            <h3 class=" text-center border-bottom d-inline m-1">
                Edit Member
            </h3>


        </div>

        <div class="row">
            <div class="col-12">
                <div class="form-group ">
                    <div class="col">
                        <label asp-for="Name">

                        </label>
                        <input asp-for="Name" class="form-control">
                    </div>

                    <div class="col">
                        <label asp-for="TitleJob">

                        </label>
                        <input asp-for="TitleJob" class="form-control">
                    </div>

                    <div class="col">
                        <label asp-for="Image">
                        </label><input asp-for="Image" class="form-control">
                    </div>






                </div>

                <div class="col-4 ">
                    <div class="form-group row mt-4">

                        <div class="col">
                            <input type="submit" value="Edit" class="btn btn-warning" />
                        </div>
                        <div class="col">
                            <a asp-action="ATeamMem" class="btn btn-outline-warning">Back</a>
                        </div>
                    </div>
                </div>


            </div>
        </div>
    </div>
</form>

