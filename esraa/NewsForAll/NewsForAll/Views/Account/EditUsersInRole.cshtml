@model List<UserRoleViewModel>
@{
    ViewData["Title"] = "EditUsersInRole";
}
<form  method="post" asp-action="EditUsersInRole" asp-controller="Account">
    <div class="card">
        <div class="card-header">
            <h3>Add/Remove User in Role</h3>
        </div>

        <div class="card-body">
            @for (int i = 0; i < Model.Count; i++)
            {
                <input type="hidden" asp-for="@Model[i].UserId" />
                <input type="hidden" asp-for="@Model[i].UserName" />
                <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                <label asp-for="@Model[i].IsSelected" class="form-check-label">
                    @Model[i].UserName
                </label>
            }
        </div>

        <div class="card-footer">
            <input type="submit" class="btn btn-warning" value="Update" />
            <a class="btn btn-warning" asp-action="RoleList" asp-controller="Account">Back</a>
        </div>
    </div>

</form>