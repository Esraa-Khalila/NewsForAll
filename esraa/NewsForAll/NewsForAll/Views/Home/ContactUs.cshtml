@model ContactU

<section >
   

    <center class="p-2">
        <h2 class="border-bottom d-inline border-warning  text-black-50 mb-1">Contact</h2>
    </center>
    
    <div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d27044.744449821617!2d36.10999179899361!3d32.080253708786074!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0xe449ffce8136e656!2z2YXYrdmF2LUg2YjYs9mI2KjYsdmF2KfYsdmD2Kog2KfZhNio2LHZg9mH!5e0!3m2!1sar!2sjo!4v1615811731371!5m2!1sar!2sjo"  class="w-100" style="border:0; height:250px ;" allowfullscreen="" loading="lazy"></iframe>
    </div>
    <div class="container">

        <div class="row mt-5">

            <div class="col-lg-4">
                <div class="info">
                    <div class="address">
                       
                        <h4>Location:</h4>
                        <p>Army Street, Zarqa, Jordan</p>
                    </div>

                    <div class="email">
                        
                        <h4>Email:</h4>
                        <p>esraakh.1996@yahoo.com</p>
                    </div>

                    <div class="phone">
                        
                        <h4>Call:</h4>
                        <p>0796475978</p>
                    </div>

                </div>

            </div>

            <div class="col-lg-8 mt-5 mt-lg-0">

                <form  asp-action="SaveContact">
                    <div class="form-row">
                        <div class="col-md-6 form-group">
                            <input type="text" class="form-control border-warning" asp-for="Fna" placeholder="Your First Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                            <div class="validate"></div>
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="text" class="form-control border-warning" asp-for="Lna" placeholder="Your Last Name" data-rule="minlen:4" data-msg="Please enter at least 4 chars" />
                            <div class="validate"></div>
                        </div>
                        <div class="col-md-6 form-group">
                            <input type="email" class="form-control border-warning" asp-for="Email" placeholder="Your Email" data-rule="email" data-msg="Please enter a valid email" />
                            <div class="validate"></div>
                        </div>
                    </div>

                    <div class="form-group">
                        <textarea class="form-control border-warning" asp-for="Message" rows="5" data-rule="required" data-msg="Please write something for us" placeholder="Message"></textarea>
                        <div class="validate"></div>
                    </div>

                    <div  ><button class="text-center mb-2 btn btn-warning" type="submit">Send Message</button></div>
                </form>

            </div>

        </div>

    </div>
</section>
